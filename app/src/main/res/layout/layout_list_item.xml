<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bus_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="7dp"
    android:layout_marginRight="5dp"
    android:layout_weight="1.3"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp"
    app:cardMaxElevation="2dp"
    app:rippleColor="@android:color/darker_gray">

    <LinearLayout
        android:id="@+id/inner_card_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16sp"
        android:paddingTop="8sp"
        android:paddingRight="16sp"
        android:paddingBottom="8sp">

        <LinearLayout
            android:id="@+id/card_name_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/card_station_names"
                style="@style/Widget.MaterialComponents.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceOverline"
                android:textColor="@android:color/darker_gray"
                android:textStyle="bold"
                android:theme="@style/Base.Widget.MaterialComponents.TextView" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/card_time-container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/card_departure_arrival_times"
                style="@style/Widget.MaterialComponents.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceHeadline5"
                android:textColor="#232F34"
                android:textStyle="bold"
                android:theme="@style/Base.Widget.MaterialComponents.TextView" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/card_info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/card_extra_bus_data"
                style="@style/Widget.MaterialComponents.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:theme="@style/Base.Widget.MaterialComponents.TextView" />

        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/card_share_button"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_margin="5dp"
        android:text="@string/button_share"
        android:theme="@style/Widget.MaterialComponents.Button.TextButton" />

</com.google.android.material.card.MaterialCardView>